@model List<FAAS.Entities.DellyOrder>

@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_Layout - Copy.cshtml";
}

@using (Html.BeginForm("Index", "Deli"))
{

    <h2>Deli  Orders</h2>


 if (@Model.Count >= 0)
  {
        
    <table>
        <tr>
            <td></td>
            <td style="font-size:150%">
                <b>Name</b>
            </td>
            <td style="font-size:150%">
                <b>Total</b>
                </td>
            <td style="font-size:150%"><b> Pending</b></td>
            <td style="font-size:150%"><b>Completed</b></td>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td><img src="@Model[i].ImageUrl" width="100" height="50" /></td>
                <td>
                    @Html.HiddenFor(mode => Model[i].ProductId)
                    @Model[i].Name
                </td>
                <td>@Model[i].TotalOrder</td>
                <td >@Model[i].PendingOrder</td>
                <td>@Html.TextBoxFor(model => Model[i].CompletedOrder)</td>
            </tr>

        }
    </table>
    <br /> <br />

    <input type="submit" value="Update" />
}
else
{
        <div class="editor-label">
            <dl>
                <dd style="color:red">
                    No Order to Cook
                </dd>
            </dl>
        </div>
    }}