@model List<FAAS.Entities.PickingOrder>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout - Copy.cshtml";
}

@using (Html.BeginForm("Index", "Delly"))
{

    <h2>Picking Orders</h2>

    

    <table border="1">
        <tr><td style="font-size:150%">
                <b>OrderId</b>
            </td>
            <td style ="font-size:150%">
             <b>   Customer Address</b>
            </td>
            <td style="font-size:150%"><b> Postcode</b></td>
            <td style="font-size:150%"><b>Delivery Time</b></td>
            <td style="font-size:150%"><b>Barcode</b></td>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                
                <td onclick="window.open('http://localhost:13912/api/order/'+@Model[i].OrderId);"> <a>@Model[i].OrderId</a></td>
                <td>@Model[i].CustomerAddress</td>
                <td>@Model[i].Postcode</td>
                <td>@Model[i].DeliveryTime</td>
                <td><img src="@Model[i].BarcodeUrl" width="100" height="50" /></td>

            </tr>

        }
    </table>
    <br/>
    <img src="~/Images/tesco-van.jpg" , width="850" height="400" />
}